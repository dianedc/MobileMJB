<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mjm.workflowkami.add_classes.AddPrequestDtlItem"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/preq_dtl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/preq_dtl_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Description" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/preq_dtl_qty"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/preq_dtl_unit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Unit" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/preq_dtl_job"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Job" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/preq_dtl_uni_price"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Unit Price"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/preq_dtl_line_tot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnSavePreqDtlItem"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Dismiss"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnSaveUser"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnSavePreqDtlItem"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnCancel"
            android:layout_alignBottom="@+id/btnCancel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Save"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>
</LinearLayout>
