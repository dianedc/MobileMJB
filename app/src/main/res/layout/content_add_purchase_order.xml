<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Information"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pord_id"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:drawableLeft="@drawable/ic_assign"
                android:drawablePadding="10dp"
                android:ems="14"
                android:hint="Purchase Order ID"
                android:singleLine="true"
                android:textSize="6pt" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/preq_id"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:drawableLeft="@drawable/ic_assign"
                    android:drawablePadding="10dp"
                    android:ems="14"
                    android:hint="Purchase Request ID"
                    android:singleLine="true"
                    android:textSize="6pt" />

            </android.support.design.widget.TextInputLayout>
        </android.support.design.widget.TextInputLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
                android:id="@+id/pord_date"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:ems="14"
                android:textSize="6pt"
                android:inputType="date"
                android:hint="Date"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pord_vendor"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:drawableLeft="@drawable/ic_menu_user"
                android:drawablePadding="10dp"
                android:ems="14"
                android:hint="Vendor"
                android:singleLine="true"
                android:textSize="6pt" />

        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Information"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/shippingmethod"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:drawableLeft="@drawable/ic_menu_user"
                android:drawablePadding="10dp"
                android:ems="14"
                android:hint="Shipping Method"
                android:singleLine="true"
                android:textSize="6pt" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/shippingterms"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:drawableLeft="@drawable/ic_menu_project"
                android:drawablePadding="10dp"
                android:ems="14"
                android:hint="Shipping Terms"
                android:singleLine="true"
                android:textSize="6pt" />

        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/deliv_date"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="10dp"
            android:ems="14"
            android:textSize="6pt"
            android:inputType="date"
            android:hint="Delivery Date"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authorization Information"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Project Manager"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="10dp"
            android:textStyle="normal"
            android:textSize="6pt"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_menu_user"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Spinner
            android:id="@+id/proj_manager"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:drawSelectorOnTop="true"
            android:drawablePadding="10dp"
            />
        <!--android:entries="@array/projectManager"-->

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/dateauthorized_proj"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="10dp"
            android:ems="14"
            android:textSize="6pt"
            android:inputType="date"
            android:hint="Date Authorized"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Authorization Status"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="10dp"
            android:textStyle="normal"
            android:textSize="6pt"
            android:textColor="#000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Spinner
            android:id="@+id/authorization_status"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:drawSelectorOnTop="true"
             />
        <!--android:entries="@array/authorizationStatus"-->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Purchasing Officer"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="10dp"
            android:textStyle="normal"
            android:textSize="6pt"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_menu_user"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Spinner
            android:id="@+id/purchasingOfficer"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:drawSelectorOnTop="true"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/dateauthorized_purchase"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="10dp"
            android:ems="14"
            android:textSize="6pt"
            android:inputType="date"
            android:hint="Date Authorized"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Authorization Status"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:drawablePadding="10dp"
            android:textStyle="normal"
            android:textSize="6pt"
            android:textColor="#000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:id="@+id/authorization_stat"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:drawSelectorOnTop="true"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:text="Save"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>