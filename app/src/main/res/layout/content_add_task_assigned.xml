<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workerID" />

    <TextView
        android:id="@+id/textaddproj"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space"
        android:layout_marginTop="27dp"
        android:text="Project"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:drawablePadding="10dp"/>

    <Spinner
        android:id="@+id/task_assigned_add_proj"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textaddproj"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/textaddtask"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_assigned_add_task"
        android:layout_alignStart="@+id/task_assigned_add_task"
        android:layout_marginBottom="24dp"
        android:drawablePadding="10dp"
        android:text="Task" />

    <Spinner
        android:id="@+id/task_assigned_add_task"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textaddworker"
        android:layout_below="@+id/task_assigned_add_proj"
        android:layout_marginTop="44dp"
        android:drawablePadding="10dp" />

    <TextView
        android:id="@+id/textaddworker"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/task_assigned_add_worker"
        android:layout_below="@+id/task_assigned_add_task"
        android:layout_marginTop="25dp"
        android:drawablePadding="10dp"
        android:text="Worker" />

    <Spinner
        android:id="@+id/task_assigned_add_worker"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textaddworker"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:drawablePadding="10dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/task_assigned_add_worker"
        android:layout_marginTop="69dp">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/btnSaveTaskAssigned"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:onClick="onClickCancel"
            android:text="Dismiss"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnSaveTaskAssigned"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:onClick="onClickCancel"
            android:text="Save"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</RelativeLayout>