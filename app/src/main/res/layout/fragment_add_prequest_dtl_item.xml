<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mjm.workflowkami.add_classes.AddPRequestItemDtl">

    <EditText
        android:id="@+id/preq_id_dtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textInputLayout2">

        <EditText
            android:id="@+id/preq_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/preq_dtl_gendesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:entries="@array/generalDescription" />

    <EditText
        android:id="@+id/preq_dtl_desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preq_dtl_qty"
        android:layout_alignStart="@+id/preq_dtl_qty"
        android:hint="Description"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/preq_dtl_qty"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preq_dtl_unit"
        android:layout_alignStart="@+id/preq_dtl_unit"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/preq_dtl_unit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preq_dtl_job"
        android:layout_alignStart="@+id/preq_dtl_job"
        android:hint="Unit"
        android:textSize="6pt" />


    <EditText
        android:id="@+id/preq_dtl_job"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preq_dtl_uni_price"
        android:layout_alignStart="@+id/preq_dtl_line_tot"
        android:hint="Floor"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/preq_dtl_uni_price"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preq_dtl_line_tot"
        android:layout_alignEnd="@+id/preq_dtl_line_tot"
        android:hint="Unit Price"
        android:inputType="numberDecimal"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/preq_dtl_line_tot"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space5"
        android:layout_alignEnd="@+id/preq_dtl_gendesc"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:id="@+id/space5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout2">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnSavePreqDtlItem"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Dismiss"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnSaveUser"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnSavePreqDtlItem"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnCancel"
            android:layout_alignBottom="@+id/btnCancel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Save"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>

</RelativeLayout>