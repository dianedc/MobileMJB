    <TextView
        android:id="@+id/projname"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-13dp"
        android:paddingLeft="13dp"
        android:paddingTop="16dp"
        android:text="tesxt"
        android:textColor="#000000"
        android:textSize="9pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnViewProj"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.086" />

    <TextView
        android:id="@+id/projmanager"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-13dp"
        android:paddingBottom="4dp"
        android:paddingLeft="13dp"
        android:paddingTop="12dp"
        android:text="TextView"
        android:textSize="6pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projname"
        app:layout_constraintRight_toLeftOf="@+id/btnViewProj"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.086" />

    <Button
        android:id="@+id/btnViewProj"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_remove_red_eye_18px"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/btnEditProj"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditProj"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_mode_edit_4px"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>