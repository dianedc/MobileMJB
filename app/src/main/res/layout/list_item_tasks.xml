<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskName"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="13dp"
        android:paddingTop="16dp"
        android:text="tesxt"
        android:textColor="#000000"
        android:textSize="9pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnCompleteTask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/taskStatus"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="13dp"
        android:paddingTop="12dp"
        android:text="TextView"
        android:textSize="6pt"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/btnCompleteTask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskName" />

    <Button
        android:id="@+id/btnEditTask"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/arrowright"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCompleteTask"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@drawable/ic_check_circle_black_24dp"
        android:text="Complete"
        android:textSize="5pt"
        app:layout_constraintEnd_toStartOf="@+id/btnEditTask"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>